{
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "python railway_api.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "EMBEDDINGS_PATH": "/app/embeddings_db",
        "PYTHONPATH": "/app",
        "PORT": "8000"
      }
    }
  }
}